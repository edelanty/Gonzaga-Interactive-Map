<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="?android:attr/selectableItemBackground">

    <!-- Heart Icon -->
    <ImageButton
        android:id="@+id/remove_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/heart_filled"
        android:contentDescription="@string/remove_favorite"
        app:tint="@android:color/holo_red_dark" />

    <!-- Favorite Name -->
    <TextView
        android:id="@+id/favorite_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:textSize="18sp"
        android:text="Favorite Name" />

    <!-- Bell Icon -->
    <ImageButton
        android:id="@+id/notification_bell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/notifications_none"
        android:contentDescription="@string/notification_bell" />
</LinearLayout>